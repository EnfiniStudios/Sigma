<?xml version="1.0" encoding="UTF-8"?>


<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXProgressBar?>
<?import com.jfoenix.controls.JFXTabPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:id="crmParent" stylesheets="@../css/crm.css"
            fx:controller="com.enfiniStudios.sigma.ui.CRMController">
   <center>
      <AnchorPane BorderPane.alignment="CENTER">
         <children>
            <JFXTabPane prefHeight="516.0" prefWidth="945.0" tabClosingPolicy="UNAVAILABLE" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <tabs>
                  <Tab text="Home">
                    <content>
                      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                           <children>
                                <JFXProgressBar fx:id="loadBar" layoutX="1.0" layoutY="-1.0" prefHeight="5.0" prefWidth="945.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" />
                           </children>
                      </AnchorPane>
                    </content>
                  </Tab>
                  <Tab text="Activities">
                    <content>
                      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
                    </content>
                  </Tab>
                  <Tab text="People">
                    <content>
                      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
                    </content>
                  </Tab>
               </tabs>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </JFXTabPane>
            <HBox AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="1.0">
                <children>
                    <JFXButton contentDisplay="GRAPHIC_ONLY" onMouseClicked="#exitbtn" prefHeight="90.0" prefWidth="88.0" styleClass=".tab-exit" text="Exit">
                        <graphic>
                            <ImageView pickOnBounds="true" preserveRatio="true">
                                <image>
                                    <Image url="@../icons/exit.png" />
                                </image>
                            </ImageView>
                        </graphic>
                        
                    </JFXButton>
                </children>
            </HBox>
         </children>
      </AnchorPane>
   </center>    
</BorderPane>
